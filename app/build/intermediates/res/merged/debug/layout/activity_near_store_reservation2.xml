<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Near.NearStoreReservation2">

    <ImageView
        android:layout_width="100dp"
        android:background="@drawable/page2_logo"
        android:id="@+id/imageView6"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@+id/frame_container" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:id="@+id/rb2_waitTel"
        android:layout_marginTop="58dp"
        android:textColorHint="@android:color/black"
        android:hint="핸드폰 번호"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_below="@+id/rb2_waitName"
        android:layout_centerHorizontal="true"
        android:background="@drawable/photoupload_background_gray" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="56dp"
        android:id="@+id/rb2_peopleNum"
        android:layout_below="@+id/rb2_waitTel"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textAlignment="center"
        android:hint="인원수"
        android:textColorHint="@android:color/black"
        android:background="@drawable/photoupload_background_gray" />

    <Button
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:id="@+id/rb2_btn"
        android:layout_marginBottom="48dp"
        android:background="@drawable/page4_reservation"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:id="@+id/rb2_waitName"
        android:layout_marginTop="112dp"
        android:textColorHint="@android:color/black"
        android:hint="이름"
        android:textSize="18sp"
        android:textAlignment="center"
        android:background="@drawable/photoupload_background_gray"
        android:layout_below="@+id/imageView6"
        android:layout_alignLeft="@+id/rb2_waitTel"
        android:layout_alignStart="@+id/rb2_waitTel" />

</RelativeLayout>
