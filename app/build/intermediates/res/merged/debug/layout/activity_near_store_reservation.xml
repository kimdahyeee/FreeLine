<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Near.NearStoreReservation"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="100dp"
        android:background="@drawable/page2_logo"
        android:id="@+id/imageView6"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@+id/frame_container" />

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/rb_storeImage"
        android:layout_marginTop="55dp"
        android:background="@android:color/darker_gray"
        android:clickable="false"
        android:longClickable="false"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="300dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="매장 이름"
        android:id="@+id/rb_storeName"
        android:layout_marginTop="15dp"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/rb_storeImage"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6" />

    <TextView
        android:text="@string/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rb_storeIntro"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/rb_storeName"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/rb_btn"
        android:background="@drawable/page3_number"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:layout_height="35dp"
        android:layout_width="200dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xx"
        android:id="@+id/rb_waitCount"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/rb_waitNum"
        android:layout_alignBottom="@+id/rb_waitNum"
        android:layout_toRightOf="@+id/imageView6"
        android:layout_toEndOf="@+id/imageView6" />

    <ImageView
        android:background="@drawable/page2_stand_by_team"
        android:id="@+id/imageView5"
        android:layout_height="20dp"
        android:layout_width="30dp"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/rb_btn"
        android:layout_toLeftOf="@+id/rb_storeName"
        android:layout_toStartOf="@+id/rb_storeName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대기팀"
        android:id="@+id/rb_waitNum"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
